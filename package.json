    "babel-loader": "^8.1.0",
    "babel-plugin-styled-components": "^1.10.7",
    "lerna": "^3.20.2",
    "prettier": "^2.0.2"
  },
  "dependencies": {
    "@testing-library/react": "^10.0.2",
    "@testing-library/react-hooks": "^3.2.1",
    "clsx": "^1.1.0",
    "framer-motion": "^1.10.3",
    "jest": "^25.3.0",
    "lerna-changelog": "^1.0.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-feather": "^2.0.4",
    "react-spring": "^8.0.27",
